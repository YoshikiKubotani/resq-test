{
    "manifest_version": 3,
    "name": "Gmail Reply Support AI",
    "version": "8.1",
    "description": "AI-powered reply editor for Gmail",
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "content_scripts": [
        {
        "matches": ["*://mail.google.com/*"],
        "js": ["content/content.js"],
        "run_at": "document_end",
        "type": "module"
        }
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "pages/popup/popup.html"
    },
    "web_accessible_resources": [
        {
        "resources": ["reply-editor.html", "reply-editor.js", "settings.html", "settings.js", "popup.js", "popup.html", "content.js"],
        "matches": ["<all_urls>"]
        }
    ]
}
